# Environment Configuration for FarmChain Marketplace

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (MongoDB)
MONGODB_URI=mongodb://localhost:27017/farmchain
DB_NAME=farmchain_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Web3 Configuration
INFURA_PROJECT_ID=your-infura-project-id
INFURA_PROJECT_SECRET=your-infura-project-secret
ETHEREUM_NETWORK=goerli
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
PRIVATE_KEY=your-private-key-for-contract-deployment

# IPFS Configuration (for storing images)
IPFS_GATEWAY=https://ipfs.infura.io:5001
IPFS_PROJECT_ID=your-ipfs-project-id
IPFS_PROJECT_SECRET=your-ipfs-project-secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5000000
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Payment Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Social Media Integration
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# Analytics
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Development Configuration
DEBUG=farmchain:*
LOG_LEVEL=debug

# Production Configuration (uncomment for production)
# NODE_ENV=production
# HTTPS=true
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key

# Blockchain Network Configuration
# Ethereum Mainnet
# ETHEREUM_NETWORK=mainnet
# ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id

# Polygon Network
# POLYGON_NETWORK=polygon
# POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your-project-id

# Binance Smart Chain
# BSC_NETWORK=bsc
# BSC_RPC_URL=https://bsc-dataseed.binance.org/
